generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Tenant {
  id             String         @id @default(uuid())
  name           String
  slug           String         @unique
  email          String
  phone          String?
  address        String?
  country        String         @default("DO")
  status         TenantStatus   @default(ACTIVE)
  plan           PlanType       @default(BASIC)
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt
  rnc            String?
  logo           String?
  subdomain      String         @unique @default("")
  customDomain   String?        @unique
  databaseName   String         @default("")
  databaseUrl    String         @default("")
  settings       Json?
  limits         Json?
  billingEmail   String         @default("")
  subscriptionId String?
  trialEndsAt    DateTime?      @db.Timestamp(6)
  lastActiveAt   DateTime?      @db.Timestamp(6)
  users          MasterUser[]
  subscriptions  Subscription[]
  invoices       TenantInvoice[]
  activities     TenantActivity[]

  @@index([slug])
  @@index([status])
}

model MasterUser {
  id        String     @id @default(uuid())
  email     String     @unique
  password  String
  name      String
  role      MasterRole @default(SUPPORT)
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  tenantId  String?
  tenant    Tenant?    @relation(fields: [tenantId], references: [id])

  @@index([email])
}

model Subscription {
  id           String             @id @default(uuid())
  tenantId     String
  plan         PlanType
  status       SubscriptionStatus @default(ACTIVE)
  startDate    DateTime
  endDate      DateTime?
  billingCycle BillingCycle       @default(MONTHLY)
  createdAt    DateTime           @default(now())
  updatedAt    DateTime           @updatedAt
  tenant       Tenant             @relation(fields: [tenantId], references: [id])

  @@index([tenantId])
  @@index([status])
}

model User {
  id                   String                @id @default(uuid())
  email                String                @unique
  password             String
  name                 String
  phone                String?
  role                 Role                  @default(OPERATOR)
  isActive             Boolean               @default(true)
  lastLogin            DateTime?
  createdAt            DateTime              @default(now())
  updatedAt            DateTime              @updatedAt
  branchId             String?
  managedBranches      Branch[]              @relation("BranchManager")
  cashMovements        CashMovement[]
  closedCashRegisters  CashRegister[]        @relation("ClosedCashRegister")
  openedCashRegisters  CashRegister[]        @relation("OpenedCashRegister")
  creditNotes          CreditNote[]
  inventoryAdjustments InventoryAdjustment[]
  inventoryMovements   InventoryMovement[]
  invoices             Invoice[]
  payments             Payment[]
  quotes               Quote[]
  tasks                Task[]
  appointments         Appointment[]
  branch               Branch?               @relation("UserBranch", fields: [branchId], references: [id])
  purchases            Purchase[]
  supplierPayments     SupplierPayment[]

  @@index([email])
  @@index([role])
  @@index([isActive])
  @@index([branchId])
}

model Client {
  id             String    @id @default(uuid())
  name           String
  identification String
  email          String?
  phone          String?
  address        String?
  creditLimit    Decimal?  @default(0) @db.Decimal(10, 2)
  creditDays     Int       @default(30)
  isActive       Boolean   @default(true)
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  invoices       Invoice[]
  payments       Payment[]
  quotes         Quote[]
  tasks          Task[]

  @@index([name])
  @@index([identification])
  @@index([isActive])
}

model Branch {
  id                 String                @id @default(uuid())
  name               String                @unique
  address            String?
  phone              String?
  isActive           Boolean               @default(true)
  createdAt          DateTime              @default(now())
  updatedAt          DateTime              @updatedAt
  code               String?               @unique
  email              String?
  managerId          String?
  manager            User?                 @relation("BranchManager", fields: [managerId], references: [id])
  cashRegisters      CashRegister[]
  adjustments        InventoryAdjustment[]
  inventoryMovements InventoryMovement[]
  invoices           Invoice[]
  ncfSequences       NcfSequence[]
  stocks             Stock[]
  users              User[]                @relation("UserBranch")
  appointments       Appointment[]
  purchases          Purchase[]
  supplierInvoices    SupplierInvoice[]
  supplierPayments    SupplierPayment[]

  @@index([code])
  @@index([managerId])
  @@index([name])
  @@index([isActive])
}

model Category {
  id          String    @id @default(uuid())
  name        String    @unique
  description String?
  isActive    Boolean   @default(true)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  products    Product[]

  @@index([name])
  @@index([isActive])
}

model Product {
  id              String                    @id @default(uuid())
  code            String                    @unique
  barcode         String?                   @unique
  name            String
  description     String?
  categoryId      String
  brand           String?
  unit            String                    @default("UNIT")
  salePrice       Decimal                   @db.Decimal(10, 2)
  cost            Decimal?                  @db.Decimal(10, 2)
  hasTax          Boolean                   @default(true)
  taxPercent      Decimal                   @default(18) @db.Decimal(5, 2)
  controlsStock   Boolean                   @default(true)
  minStock        Decimal                   @default(0) @db.Decimal(10, 2)
  isActive        Boolean                   @default(true)
  imageUrl        String?
  createdAt       DateTime                  @default(now())
  updatedAt       DateTime                  @updatedAt
  creditNoteItems CreditNoteItem[]
  adjustmentItems InventoryAdjustmentItem[]
  movements       InventoryMovement[]
  invoiceItems    InvoiceItem[]
  category        Category                  @relation(fields: [categoryId], references: [id])
  quoteItems      QuoteItem[]
  stocks          Stock[]
  purchaseItems   PurchaseItem[]

  @@index([code])
  @@index([barcode])
  @@index([categoryId])
  @@index([isActive])
}

model Stock {
  id        String   @id @default(uuid())
  productId String
  branchId  String
  quantity  Decimal  @default(0) @db.Decimal(10, 2)
  minStock  Decimal  @default(0) @db.Decimal(10, 2)
  updatedAt DateTime @updatedAt
  branch    Branch   @relation(fields: [branchId], references: [id])
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@unique([productId, branchId], name: "productId_branchId")
  @@index([productId])
  @@index([branchId])
}

model Invoice {
  id                 String        @id @default(uuid())
  number             String        @unique
  ncf                String?       @unique
  clientId           String?
  type               InvoiceType   @default(FISCAL)
  status             InvoiceStatus @default(ISSUED)
  paymentMethod      PaymentMethod
  subtotal           Decimal       @db.Decimal(10, 2)
  tax                Decimal       @default(0) @db.Decimal(10, 2)
  discount           Decimal       @default(0) @db.Decimal(10, 2)
  total              Decimal       @db.Decimal(10, 2)
  balance            Decimal       @default(0) @db.Decimal(10, 2)
  issueDate          DateTime      @default(now())
  dueDate            DateTime?
  userId             String
  branchId           String?
  observations       String?
  cancelledAt        DateTime?
  cancellationReason String?
  cancelledBy        String?
  createdAt          DateTime      @default(now())
  updatedAt          DateTime      @updatedAt
  creditNotes        CreditNote[]
  branch             Branch?       @relation(fields: [branchId], references: [id])
  client             Client?       @relation(fields: [clientId], references: [id])
  user               User          @relation(fields: [userId], references: [id])
  items              InvoiceItem[]
  payments           Payment[]

  @@index([number])
  @@index([ncf])
  @@index([clientId])
  @@index([status])
  @@index([issueDate])
  @@index([dueDate])
}

model InvoiceItem {
  id          String   @id @default(uuid())
  invoiceId   String
  productId   String?
  description String
  quantity    Decimal  @db.Decimal(10, 2)
  price       Decimal  @db.Decimal(10, 2)
  discount    Decimal  @default(0) @db.Decimal(10, 2)
  subtotal    Decimal  @db.Decimal(10, 2)
  createdAt   DateTime @default(now())
  invoice     Invoice  @relation(fields: [invoiceId], references: [id], onDelete: Cascade)
  product     Product? @relation(fields: [productId], references: [id])

  @@index([invoiceId])
  @@index([productId])
}

model Quote {
  id                   String      @id @default(uuid())
  number               String      @unique
  clientId             String?
  status               QuoteStatus @default(OPEN)
  subtotal             Decimal     @db.Decimal(10, 2)
  tax                  Decimal     @default(0) @db.Decimal(10, 2)
  discount             Decimal     @default(0) @db.Decimal(10, 2)
  total                Decimal     @db.Decimal(10, 2)
  validUntil           DateTime?
  userId               String
  convertedToInvoiceId String?     @unique
  createdAt            DateTime    @default(now())
  updatedAt            DateTime    @updatedAt
  client               Client?     @relation(fields: [clientId], references: [id])
  user                 User        @relation(fields: [userId], references: [id])
  items                QuoteItem[]

  @@index([number])
  @@index([clientId])
  @@index([status])
}

model QuoteItem {
  id          String   @id @default(uuid())
  quoteId     String
  productId   String?
  description String
  quantity    Decimal  @db.Decimal(10, 2)
  price       Decimal  @db.Decimal(10, 2)
  discount    Decimal  @default(0) @db.Decimal(10, 2)
  subtotal    Decimal  @db.Decimal(10, 2)
  createdAt   DateTime @default(now())
  product     Product? @relation(fields: [productId], references: [id])
  quote       Quote    @relation(fields: [quoteId], references: [id], onDelete: Cascade)

  @@index([quoteId])
}

model CreditNote {
  id        String           @id @default(uuid())
  number    String           @unique
  ncf       String?          @unique
  invoiceId String
  reason    String
  subtotal  Decimal          @db.Decimal(10, 2)
  tax       Decimal          @default(0) @db.Decimal(10, 2)
  total     Decimal          @db.Decimal(10, 2)
  issueDate DateTime         @default(now())
  userId    String
  createdAt DateTime         @default(now())
  invoice   Invoice          @relation(fields: [invoiceId], references: [id])
  user      User             @relation(fields: [userId], references: [id])
  items     CreditNoteItem[]

  @@index([number])
  @@index([invoiceId])
  @@index([issueDate])
}

model CreditNoteItem {
  id           String     @id @default(uuid())
  creditNoteId String
  productId    String?
  description  String
  quantity     Decimal    @db.Decimal(10, 2)
  price        Decimal    @db.Decimal(10, 2)
  subtotal     Decimal    @db.Decimal(10, 2)
  createdAt    DateTime   @default(now())
  creditNote   CreditNote @relation(fields: [creditNoteId], references: [id], onDelete: Cascade)
  product      Product?   @relation(fields: [productId], references: [id])

  @@index([creditNoteId])
}

model Payment {
  id           String        @id @default(uuid())
  clientId     String
  invoiceId    String?
  amount       Decimal       @db.Decimal(10, 2)
  method       PaymentMethod
  reference    String?
  paymentDate  DateTime      @default(now())
  observations String?
  userId       String
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  client       Client        @relation(fields: [clientId], references: [id])
  invoice      Invoice?      @relation(fields: [invoiceId], references: [id])
  user         User          @relation(fields: [userId], references: [id])

  @@index([clientId])
  @@index([invoiceId])
  @@index([paymentDate])
}

model CashRegister {
  id            String         @id @default(uuid())
  branchId      String
  status        CashStatus     @default(CLOSED)
  initialAmount Decimal        @db.Decimal(10, 2)
  finalAmount   Decimal?       @db.Decimal(10, 2)
  difference    Decimal?       @default(0) @db.Decimal(10, 2)
  openedAt      DateTime
  closedAt      DateTime?
  openedBy      String
  closedBy      String?
  observations  String?
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  movements     CashMovement[]
  branch        Branch         @relation(fields: [branchId], references: [id])
  closedByUser  User?          @relation("ClosedCashRegister", fields: [closedBy], references: [id])
  openedByUser  User           @relation("OpenedCashRegister", fields: [openedBy], references: [id])

  @@index([branchId])
  @@index([status])
  @@index([openedAt])
}

model CashMovement {
  id             String        @id @default(uuid())
  cashRegisterId String
  type           MovementType
  concept        String
  amount         Decimal       @db.Decimal(10, 2)
  method         PaymentMethod
  invoiceId      String?
  paymentId      String?
  userId         String
  movementDate   DateTime      @default(now())
  observations   String?
  createdAt      DateTime      @default(now())
  cashRegister   CashRegister  @relation(fields: [cashRegisterId], references: [id], onDelete: Cascade)
  user           User          @relation(fields: [userId], references: [id])

  @@index([cashRegisterId])
  @@index([type])
  @@index([movementDate])
}

model InventoryMovement {
  id           String                @id @default(uuid())
  productId    String
  branchId     String
  type         InventoryMovementType
  quantity     Decimal               @db.Decimal(10, 2)
  balance      Decimal               @db.Decimal(10, 2)
  documentType String?
  documentId   String?
  userId       String
  movementDate DateTime              @default(now())
  observations String?
  createdAt    DateTime              @default(now())
  branch       Branch                @relation(fields: [branchId], references: [id])
  product      Product               @relation(fields: [productId], references: [id])
  user         User                  @relation(fields: [userId], references: [id])

  @@index([productId])
  @@index([branchId])
  @@index([type])
  @@index([movementDate])
}

model InventoryAdjustment {
  id             String                    @id @default(uuid())
  branchId       String
  type           AdjustmentType
  reason         String
  userId         String
  adjustmentDate DateTime                  @default(now())
  observations   String?
  createdAt      DateTime                  @default(now())
  branch         Branch                    @relation(fields: [branchId], references: [id])
  user           User                      @relation(fields: [userId], references: [id])
  items          InventoryAdjustmentItem[]

  @@index([branchId])
  @@index([adjustmentDate])
}

model InventoryAdjustmentItem {
  id                 String              @id @default(uuid())
  adjustmentId       String
  productId          String
  previousQuantity   Decimal             @db.Decimal(10, 2)
  adjustmentQuantity Decimal             @db.Decimal(10, 2)
  newQuantity        Decimal             @db.Decimal(10, 2)
  createdAt          DateTime            @default(now())
  adjustment         InventoryAdjustment @relation(fields: [adjustmentId], references: [id], onDelete: Cascade)
  product            Product             @relation(fields: [productId], references: [id])

  @@index([adjustmentId])
  @@index([productId])
}

model Task {
  id          String    @id @default(uuid())
  title       String
  description String?
  clientId    String?
  userId      String
  status      String    @default("PENDING")
  dueDate     DateTime?
  completedAt DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  priority    String    @default("MEDIUM")
  client      Client?   @relation(fields: [clientId], references: [id])
  user        User      @relation(fields: [userId], references: [id])

  @@index([clientId])
  @@index([userId])
  @@index([status])
  @@index([priority])
}

model NcfSequence {
  id            String    @id @default(uuid())
  prefix        String
  description   String?
  startRange    Int
  endRange      Int
  currentNumber Int       @default(0)
  isActive      Boolean   @default(true)
  validFrom     DateTime  @default(now())
  validUntil    DateTime?
  branchId      String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  branch        Branch?   @relation(fields: [branchId], references: [id])

  @@index([prefix])
  @@index([isActive])
  @@index([branchId])
  @@index([validUntil])
}

model WhatsAppTemplate {
  id        String   @id @default(uuid())
  name      String   @unique
  type      String
  subject   String?
  message   String
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([type])
  @@index([isActive])
}

model Appointment {
  id              String   @id @default(uuid())
  clientName      String
  clientEmail     String?
  clientPhone     String
  appointmentDate DateTime
  duration        Int      @default(60)
  notes           String?
  status          String   @default("PENDING")
  source          String   @default("MANUAL")
  isViewed        Boolean  @default(false)
  viewedAt        DateTime?
  isNotified      Boolean  @default(false)
  notifiedAt      DateTime?
  branchId        String?
  userId          String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  branch Branch? @relation(fields: [branchId], references: [id])
  user   User?   @relation(fields: [userId], references: [id])

  @@index([status])
  @@index([branchId])
  @@index([appointmentDate])
  @@index([isViewed])
}

model AuditLog {
  id        String   @id @default(uuid())
  userId    String?
  action    String
  entity    String
  entityId  String
  changes   Json?
  ipAddress String?
  userAgent String?
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([action])
  @@index([entity])
  @@index([createdAt])
}

enum TenantStatus {
  ACTIVE
  SUSPENDED
  CANCELLED
  PENDING
}

enum PlanType {
  BASIC
  PROFESSIONAL
  ENTERPRISE
}

enum MasterRole {
  SUPER_ADMIN
  SUPPORT
}

enum SubscriptionStatus {
  ACTIVE
  SUSPENDED
  EXPIRED
  CANCELLED
}

enum BillingCycle {
  MONTHLY
  YEARLY
}

enum Role {
  ADMINISTRATOR
  SUPERVISOR
  OPERATOR
  CASHIER
}

enum InvoiceType {
  FISCAL
  NON_FISCAL
}

enum InvoiceStatus {
  DRAFT
  ISSUED
  PAID
  OVERDUE
  CANCELLED
}

enum PaymentMethod {
  CASH
  TRANSFER
  CARD
  CREDIT
  MIXED
}

enum QuoteStatus {
  OPEN
  ACCEPTED
  REJECTED
  CONVERTED
}

enum CashStatus {
  OPEN
  CLOSED
}

enum MovementType {
  OPENING
  SALE
  PAYMENT
  MANUAL_ENTRY
  MANUAL_EXIT
  CLOSING
}

enum InventoryMovementType {
  SALE
  CREDIT_NOTE
  ADJUSTMENT_ENTRY
  ADJUSTMENT_EXIT
  TRANSFER
}

enum AdjustmentType {
  ENTRY
  EXIT
}

// SaaS Models - Invoice for tenant billing
model TenantInvoice {
  id              String          @id @default(uuid())
  tenantId        String
  amount          Decimal         @default(0)
  currency        String          @default("DOP")
  status          InvoiceStatus   @default(DRAFT)
  description     String?
  periodStart     DateTime
  periodEnd       DateTime
  paidAt          DateTime?
  paymentMethod   String?
  paymentReference String?
  metadata        Json?           // {plan, users, storage}
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  
  // Relations
  tenant          Tenant          @relation(fields: [tenantId], references: [id])
  
  @@index([tenantId])
  @@index([status])
}

// SaaS Models - Activity log for tenants
model TenantActivity {
  id              String          @id @default(uuid())
  tenantId        String
  action          String          // CREATED, UPDATED, LOGIN, LOGOUT, etc.
  description     String
  metadata        Json?           // Additional data
  createdAt       DateTime        @default(now())
  
  // Relations
  tenant          Tenant          @relation(fields: [tenantId], references: [id])
  
  @@index([tenantId])
  @@index([createdAt])
}

// ============================================
// MÓDULO DE PROVEEDORES Y COMPRAS
// ============================================

// Proveedor
model Supplier {
  id                String              @id @default(uuid())
  code              String              @unique // Código único del proveedor
  name              String
  contactName       String?             // Nombre del contacto
  email             String?
  phone             String?
  mobile            String?
  address           String?
  city              String?
  country           String              @default("DO")
  taxId             String?             // RNC/Cédula
  website           String?
  notes             String?
  isActive          Boolean             @default(true)
  creditLimit       Decimal?            @default(0) @db.Decimal(12, 2)
  creditDays        Int?                @default(0) // Días de crédito otorgados
  category          String?             // Categoría del proveedor
  createdAt         DateTime            @default(now())
  updatedAt         DateTime            @updatedAt
  
  // Relations
  purchases         Purchase[]
  invoices          SupplierInvoice[]
  payments          SupplierPayment[]
  
  @@index([code])
  @@index([name])
  @@index([isActive])
}

// Compra/Orden de Compra
model Purchase {
  id                String              @id @default(uuid())
  code              String              @unique // Código de compra
  supplierId        String
  branchId          String?
  userId            String              // Usuario que registra
  purchaseDate      DateTime            @default(now())
  deliveryDate      DateTime?
  status            PurchaseStatus      @default(PENDING)
  subtotal          Decimal             @default(0) @db.Decimal(12, 2)
  tax               Decimal             @default(0) @db.Decimal(12, 2)
  discount          Decimal             @default(0) @db.Decimal(12, 2)
  total             Decimal             @default(0) @db.Decimal(12, 2)
  paid              Decimal             @default(0) @db.Decimal(12, 2) // Monto pagado
  balance           Decimal             @default(0) @db.Decimal(12, 2) // Saldo pendiente
  notes             String?
  reference         String?             // Referencia externa
  createdAt         DateTime            @default(now())
  updatedAt         DateTime            @updatedAt
  
  // Relations
  supplier          Supplier            @relation(fields: [supplierId], references: [id])
  branch            Branch?             @relation(fields: [branchId], references: [id])
  user              User                @relation(fields: [userId], references: [id])
  items             PurchaseItem[]
  invoice           SupplierInvoice?
  paymentDetails    PurchasePaymentDetail[] // Pagos aplicados a esta compra
  
  @@index([code])
  @@index([supplierId])
  @@index([status])
  @@index([purchaseDate])
}

// Items de la compra
model PurchaseItem {
  id                String              @id @default(uuid())
  purchaseId        String
  productId         String?
  description       String              // Descripción del producto/servicio
  quantity          Decimal             @default(1) @db.Decimal(10, 2)
  unitPrice         Decimal             @default(0) @db.Decimal(12, 2)
  tax               Decimal             @default(0) @db.Decimal(12, 2)
  discount          Decimal             @default(0) @db.Decimal(12, 2)
  total             Decimal             @default(0) @db.Decimal(12, 2)
  createdAt         DateTime            @default(now())
  updatedAt         DateTime            @updatedAt
  
  // Relations
  purchase          Purchase            @relation(fields: [purchaseId], references: [id], onDelete: Cascade)
  product           Product?            @relation(fields: [productId], references: [id])
  
  @@index([purchaseId])
  @@index([productId])
}

// Factura del Proveedor (Cuenta por Pagar)
model SupplierInvoice {
  id                String              @id @default(uuid())
  code              String              @unique // Número de factura
  supplierId        String
  purchaseId        String?             @unique // Opcional: vinculada a una compra
  branchId          String?
  invoiceDate       DateTime            @default(now())
  dueDate           DateTime            // Fecha de vencimiento
  status            SupplierInvoiceStatus @default(PENDING)
  subtotal          Decimal             @default(0) @db.Decimal(12, 2)
  tax               Decimal             @default(0) @db.Decimal(12, 2)
  discount          Decimal             @default(0) @db.Decimal(12, 2)
  total             Decimal             @default(0) @db.Decimal(12, 2)
  paid              Decimal             @default(0) @db.Decimal(12, 2)
  balance           Decimal             @default(0) @db.Decimal(12, 2)
  notes             String?
  reference         String?             // Referencia del proveedor
  createdAt         DateTime            @default(now())
  updatedAt         DateTime            @updatedAt
  
  // Relations
  supplier          Supplier            @relation(fields: [supplierId], references: [id])
  purchase          Purchase?           @relation(fields: [purchaseId], references: [id])
  branch            Branch?             @relation(fields: [branchId], references: [id])
  payments          SupplierPaymentDetail[]
  
  @@index([code])
  @@index([supplierId])
  @@index([status])
  @@index([dueDate])
  @@index([invoiceDate])
}

// Pago a Proveedor
model SupplierPayment {
  id                String              @id @default(uuid())
  code              String              @unique // Código del pago
  supplierId        String
  branchId          String?
  userId            String              // Usuario que registra el pago
  paymentDate       DateTime            @default(now())
  amount            Decimal             @default(0) @db.Decimal(12, 2)
  paymentMethod     PaymentMethod       @default(CASH)
  reference         String?             // Referencia bancaria, cheque, etc.
  notes             String?
  createdAt         DateTime            @default(now())
  updatedAt         DateTime            @updatedAt
  
  // Relations
  supplier          Supplier            @relation(fields: [supplierId], references: [id])
  branch            Branch?             @relation(fields: [branchId], references: [id])
  user              User                @relation(fields: [userId], references: [id])
  details           SupplierPaymentDetail[]    // Pagos aplicados a facturas
  purchaseDetails   PurchasePaymentDetail[]    // Pagos aplicados a compras
  
  @@index([code])
  @@index([supplierId])
  @@index([paymentDate])
}

// Detalle de aplicación de pago (qué facturas se pagaron)
model SupplierPaymentDetail {
  id                String              @id @default(uuid())
  paymentId         String
  invoiceId         String
  amount            Decimal             @default(0) @db.Decimal(12, 2)
  createdAt         DateTime            @default(now())
  
  // Relations
  payment           SupplierPayment     @relation(fields: [paymentId], references: [id], onDelete: Cascade)
  invoice           SupplierInvoice     @relation(fields: [invoiceId], references: [id])
  
  @@index([paymentId])
  @@index([invoiceId])
}

// Detalle de aplicación de pago a compras (qué compras se pagaron)
model PurchasePaymentDetail {
  id                String              @id @default(uuid())
  paymentId         String
  purchaseId        String
  amount            Decimal             @default(0) @db.Decimal(12, 2)
  createdAt         DateTime            @default(now())
  
  // Relations
  payment           SupplierPayment     @relation(fields: [paymentId], references: [id], onDelete: Cascade)
  purchase          Purchase            @relation(fields: [purchaseId], references: [id])
  
  @@index([paymentId])
  @@index([purchaseId])
}

// Enums para el módulo de proveedores
enum PurchaseStatus {
  PENDING           // Pendiente
  RECEIVED          // Recibida
  PARTIAL           // Parcialmente recibida
  CANCELLED         // Cancelada
}

enum SupplierInvoiceStatus {
  PENDING           // Pendiente de pago
  PARTIAL           // Parcialmente pagada
  PAID              // Pagada completamente
  OVERDUE           // Vencida
  CANCELLED         // Cancelada
}
